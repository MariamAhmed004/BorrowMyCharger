<script>
    function filterDurations() {
      const selectedDate = document.getElementById('availability-date').value;
      const durationOptions = document.querySelectorAll('.duration-option');
      const timeSelect = document.getElementById('availability-time');

      // Clear previous time options
      timeSelect.innerHTML = '<option value="">Select Time</option>';

      durationOptions.forEach(option => {
        if (option.getAttribute('data-available') === selectedDate || selectedDate === "") {
          option.style.display = 'block';
          // Add the time to the time dropdown if it's visible
          const timeValue = option.textContent;
          if (!Array.from(timeSelect.options).some(opt => opt.value === timeValue)) {
            const newOption = document.createElement('option');
            newOption.value = timeValue;
            newOption.textContent = timeValue;
            timeSelect.appendChild(newOption);
          }
        } else {
          option.style.display = 'none';
        }
      });
    }
</script>
