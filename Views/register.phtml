<body class="nopadding">
    <div class="reg-container">
        <div class="reg-box">
            <h1>Sign Up</h1>
            <p>Already have an account? <a href="#">Login</a></p>
            <form>
                <div class="reg-form-row">
                    <div class="reg-input-group">
                        <label for="firstname">Firstname</label>
                        <input type="text" id="firstname" name="firstname" class="reg-input">
                    </div>
                    <div class="reg-input-group">
                        <label for="lastname">Lastname</label>
                        <input type="text" id="lastname" name="lastname" class="reg-input">
                    </div>
                </div>
                <div class="reg-form-row">
                    <div class="reg-input-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="reg-input">
                    </div>
                    <div class="reg-input-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="reg-input">
                    </div>
                </div>
                <div class="reg-form-row">
                    <div class="reg-input-group">
                        <label for="country">Country</label>
                        <input type="text" id="country" name="country" class="reg-input">
                    </div>
                    <div class="reg-input-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" id="phone" name="phone" class="reg-input">
                    </div>
                </div>
                <div class="reg-input-group">
                    <label for="user-type">User Type</label>
                    <select id="user-type" name="user-type" class="reg-input">
                        <option value="" selected>Select User Type</option>
                        <option value="home-owner">Home Owner</option>
                        <option value="rental-user">Rental User</option>
                    </select>
                </div>
                <button type="submit" class="reg-button">Register</button>
            </form>
        </div>
    </div>
</body>


</html>